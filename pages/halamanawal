import streamlit as st

# Judul halaman
st.title("Dashboard Data Pengguna")

# Form input
st.header("Masukkan Data Anda")

nama = st.text_input("Nama lengkap:")
umur = st.number_input("Umur Anda:", min_value=0, max_value=120, step=1)

# Tombol submit
if st.button("Kirim"):
    if nama and umur:
        st.success(f"Halo {nama}! Umur Anda adalah {umur} tahun.")
    else:
        st.warning("Silakan isi semua kolom terlebih dahulu.")
